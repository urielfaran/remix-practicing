generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  dueTime     DateTime
  isCompleted Boolean  @default(false)
  List        List    @relation(fields: [listId], references: [id], onDelete: Cascade )
  listId      Int
}

model List {
  id    Int    @id @default(autoincrement())
  todos Todo[] 
  title String
}
